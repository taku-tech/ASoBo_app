<div class="row">
	<div class="col-xs-5 col-xs-offset-2">
		<h2>ジャンル一覧 / 登録</h2>
		<%= form_with model: @genre, url: admins_genres_path, method: :post, class:"form-inline",local: true do |f| %>

		<div class="form-group">
			<%= f.label :name, "ジャンル名の入力" %>
			<%= f.text_field :name %>
		</div>

		<%= f.submit "登録", class:"btn btn-default" %>

		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-xs-4 col-xs-offset-2">
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th>ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<% if genre.is_valid == true %>
					<td>有効</td>
					<% elsif genre.is_valid == false %>
					<td>無効</td>
					<% end %>
					<td><%= link_to '編集', edit_admins_genre_path(genre.id), class:"btn btn-primary" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>