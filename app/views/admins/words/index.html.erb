<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<h2>単語一覧</h2>
		<%= link_to '単語新規登録', new_admins_word_path, class:"btn btn-primary" %>
		<%= link_to 'ジャンル一覧 / 登録', admins_genres_path, class:"btn btn-warning" %>
		<table class="table">
			<thead>
				<tr>
					<th>画像</th>
					<th>単語</th>
					<th>日本語訳</th>
					<th>ジャンル</th>
					<th colspan="2"></th>
				</tr>
			</thead>
			<tbody>
				<% @words.each do |word| %>
				<tr>
					<td><%= attachment_image_tag word, :image, format: 'jpeg', size: "30x30" %></td>
					<td><%= word.word %></td>
					<td><%= word.word_jp %></td>
					<td><%= word.genre.name %></td>
					<td><%= link_to '編集', edit_admins_word_path(word.id), class:"btn btn-success" %></td>
					<td><%= link_to '削除', admins_word_path(word.id), method: :delete, class:"btn btn-danger" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>