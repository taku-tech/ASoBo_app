<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>単語詳細</h2>
      <div>
        <%= attachment_image_tag @word, :image, format: 'jpeg', size: "100x100" %>
      </div>
      <p>英単語</p>
      <p><%= @word.english %></p>

      <p>日本語</p>
      <p><%= @word.japanese %></p>

      <p>選択肢</p>
      <% @choices.each do |choice| %>
        <p><%= choice.content %></p>
      <% end %>
    </div>
  </div>
</div>