<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>お気に入り単語一覧</h2>
      <div class="words">
        <% @favorites.each do |favorite| %>
        <div class="word">
          <div class="word__image">
            <%= attachment_image_tag favorite.word, :image, format: 'jpeg', size: "100x100" %>
          </div>
          <p><%= favorite.word.japanese %></p>
          <div class="word__english">
            <p><%= favorite.word.english %></p>
          </div>
        </div>
        <% end %>
      </div>
      <%= link_to "単語一覧に戻る", words_path, class:"btn btn-default" %>
    </div>
  </div>
</div>